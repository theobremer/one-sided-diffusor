FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    p
    {
        solver           GAMG;
        tolerance        1e-7;
        relTol           0.01;
        smoother         DICGaussSeidel;
    }

    pFinal
    {
        $p;
        relTol          0;
    }

    "(U|k|omega)"
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-07;
        relTol          0.01;
    }

    "(U|k|omega)Final"
    {
        $U;
        relTol          0;
    }
}

PIMPLE
{
    nCorrectors     2;
    nNonOrthogonalCorrectors 1;  // from elbowUnsteady case 
    nOuterCorrectors 5;         // 50 // residual control from the flow_data case of Andre Weiner and Janis Gaise

     residualControl
    {
        "(U|p|omega|k)"
        {
            relTol          0;
            tolerance       1e-06;
        }
    }
}

relaxationFactors // should be testet further 
{
    equations
    {
	U		0.85;
	".*"		0.9;
        U               0.95; // 0.9 is more stable but 0.95 more convergent
        "(k|omega)"   0.95; // 0.9 is more stable but 0.95 more convergent
    }
    fields
    {
	p		0.8;  
    }
}


