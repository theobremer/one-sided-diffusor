FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    p
    {
        solver           GAMG;
        tolerance        1e-8;
        relTol           0.001;
        smoother         DICGaussSeidel;
    }

    pFinal
    {
        $p;
        relTol          0;
    }

    "(U|k|omega)"
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-08;
        relTol          0.001;
        minIter         1;
    }

    "(U|k|omega)Final"
    {
        $U;
        relTol          0;
    }
}

PIMPLE
{
    nCorrectors     2; //2
    nNonOrthogonalCorrectors 2;  // from elbowUnsteady case // 1
    nOuterCorrectors 50;         // converges after approximatly 5, but for the first loops

     residualControl
    {
        "(U|omega|k)"
        {
            relTol          0;
            tolerance       1e-07;
        }

        p
        {
            relTol          0;
            tolerance       1e-06;
        }
    }
}

relaxationFactors // should be testet further 
{
    equations
    {
        U             0.95; // 0.9 is more stable but 0.95 more convergent
        "(k|omega)"   0.95; // 0.9 is more stable but 0.95 more convergent
    }
    fields
    {
	p		0.9;  
    }
}


